<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@null</item> <!-- Or any transparency or color you need -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="titleTextColor">@color/colorAccent60</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item> <!-- Or any transparency or color you need -->
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircleButtonStyle">
        <item name="android:layout_width">@dimen/floating_icon_size</item>
        <item name="android:layout_height">@dimen/floating_icon_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="tint">@color/colorAccent</item>
        <item name="android:elevation">6dp</item>
        <item name="android:outlineProvider">paddedBounds</item>
    </style>
    <style name="CircleReadButtonStyle">
        <item name="android:layout_width">@dimen/floating_icon_size</item>
        <item name="android:layout_height">@dimen/floating_icon_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="tint">@android:color/holo_red_dark</item>
        <item name="android:elevation">6dp</item>
        <item name="android:outlineProvider">paddedBounds</item>
    </style>
    <style name="CircleMainButtonStyle">
        <item name="android:layout_width">@dimen/floating_main_icon_size</item>
        <item name="android:layout_height">@dimen/floating_main_icon_size</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/circle_floating_button_bg</item>
        <item name="tint">@android:color/white</item>
        <item name="android:elevation">6dp</item>
        <item name="android:outlineProvider">paddedBounds</item>
    </style>
</resources>
