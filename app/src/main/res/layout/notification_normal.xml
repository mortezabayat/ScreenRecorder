<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/normal_view_mode"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:gravity="center"
    android:background="@color/colorAccent60"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/record_start_stop"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_circle_record"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/screen_shot_btn"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/exo_styled_controls_repeat_all" />

    <ImageView
        android:id="@+id/tools_btn"
        android:contentDescription="@string/app_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:layout_gravity="center"
        android:src="@drawable/ic_settings" />

    <ImageView
        android:id="@+id/home_btn"
        android:contentDescription="@string/app_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:layout_gravity="center"
        android:src="@drawable/ic_home" />

    <ImageView
        android:id="@+id/exit_btn"
        android:contentDescription="@string/app_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_clear" />

</LinearLayout>